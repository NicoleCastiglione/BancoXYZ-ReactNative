{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "esModuleInterop": true, // Asegura compatibilidad con m√≥dulos CommonJS
    "skipLibCheck": true, // Opcional: Puede ayudar a evitar errores en bibliotecas
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "jest.config.ts", // Incluido si necesitas que Jest lo procese
    "jest.setup.ts", // Incluido si necesitas que Jest lo procese
    "mocks/@react-native-async-storage/async-storage.js" // Incluye todos los archivos en mocks
  ]
}

